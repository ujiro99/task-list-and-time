{
  "name": "tlt",
  "version": "0.0.1",
  "description": "This is a chrome extension, enables to manage tasks and time.",
  "scripts": {
    "build": "NODE_ENV=production webpack --config webpack.prod.js",
    "dev": "webpack --config webpack.dev.js",
    "lint": "eslint --ext .jsx,.js,.tsx,.ts src/; stylelint src/**/*.css",
    "format": "prettier --write src/**/*",
    "watch": "webpack -w --config webpack.dev.js",
    "zip": "find . -name \".DS_Store\" -delete; cd dist; zip -r ../build/build-$(node -p -e \"require('../package.json').version\").zip ./",
    "bump": "mversion p -m",
    "bump:i": "mversion i -m"
  },
  "author": "Yujiro Takeda",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/typography": "^0.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "recoil": "^0.4.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/chrome": "^0.0.60",
    "@types/jest": "^26.0.24",
    "@types/node": "^12.20.27",
    "@types/react": "^17.0.26",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "autoprefixer": "^10.3.7",
    "copy-webpack-plugin": "^6.2.1",
    "css-loader": "^3.6.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.26.1",
    "mversion": "^2.0.1",
    "postcss-loader": "^6.1.1",
    "prettier": "^2.4.1",
    "style-loader": "^0.20.3",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-webpack-plugin": "^3.0.1",
    "tailwindcss": "^2.2.16",
    "ts-loader": "^4.0.1",
    "typescript": "^4.4.3",
    "web-vitals": "^1.1.2",
    "webpack": "^5.49.0",
    "webpack-cli": "^4.7.2",
    "webpack-merge": "^4.2.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  }
}
